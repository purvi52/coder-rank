          <textarea class="testcase" name="tc4" placeholder="Test Case 4"></textarea><i class="fa-solid fa-arrow-right arrow"></i>
          <textarea class="tcsolution" name="s4" placeholder="solution.."></textarea>
          <br>
          <textarea class="testcase" name="tc5" placeholder="Test Case 5"></textarea><i class="fa-solid fa-arrow-right arrow"></i>
          <textarea class="tcsolution" name="s5" placeholder="solution.."></textarea>
          <br>
          <textarea class="testcase" name="tc6" placeholder="Test Case 6"></textarea><i class="fa-solid fa-arrow-right arrow"></i>
          <textarea class="tcsolution" name="s6" placeholder="solution.."></textarea>


        </div>
      

      </div>
    </div>
  </form>
